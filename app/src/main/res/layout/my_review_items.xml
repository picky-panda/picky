<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_gravity="center_horizontal"
    android:layout_marginStart="20dp"
    android:layout_marginEnd="20dp"
    android:paddingHorizontal="20dp"
    android:paddingVertical="10dp">

    <ImageView
        android:id="@+id/myReviewRestaurantThumbnailImageView"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:layout_marginStart="10dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/baseline_account_circle_24" />

    <Button
        android:id="@+id/myReviewItemButton"
        android:layout_width="320dp"
        android:layout_height="wrap_content"
        app:backgroundTint="@null"
        android:background="@drawable/recently_evaluated_button_shape"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/myReviewRestaurantThumbnailImageView" />

    <TextView
        android:id="@+id/myReviewRestaurantNameTextView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="이름"
        android:textSize="15dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/myReviewRestaurantThumbnailImageView"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/myReviewStatementTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        android:text="리뷰 내용"
        android:textSize="13dp"
        android:textColor="@color/gray1"
        app:layout_constraintStart_toStartOf="@+id/myReviewItemButton"
        app:layout_constraintTop_toTopOf="@+id/myReviewItemButton" />

    <TextView
        android:id="@+id/myReviewDateTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        android:text="리뷰 날짜"
        android:textColor="@color/gray2"
        android:textSize="13dp"
        app:layout_constraintBottom_toBottomOf="@+id/myReviewItemButton"
        app:layout_constraintStart_toStartOf="@+id/myReviewItemButton"
        app:layout_constraintTop_toBottomOf="@+id/myReviewStatementTextView" />

    <Button
        android:id="@+id/myRieviewdeleteButton"
        android:layout_width="60dp"
        android:layout_height="35dp"
        android:text="..."
        android:textColor="@color/gray1"
        android:backgroundTint="@color/transparent"
        app:layout_constraintBottom_toBottomOf="@+id/myReviewItemButton"
        app:layout_constraintEnd_toEndOf="@+id/myReviewItemButton" />

</androidx.constraintlayout.widget.ConstraintLayout>