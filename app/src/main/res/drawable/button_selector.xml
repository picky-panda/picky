<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- 버튼이 눌렸을 때 -->
    <item android:state_pressed="true">
        <shape android:shape="rectangle">
            <solid android:color="@color/BlueLight" />
            <corners android:radius="25dp" />
        </shape>
        <item android:drawable="@color/White" android:color="@color/White" android:state_enabled="true" />
    </item>

    <!-- 버튼이 선택되지 않았을 때 -->
    <item>
        <shape android:shape="rectangle">
            <solid android:color="@color/white" />
            <stroke android:width="2dp" android:color="@color/BlueLight" />
            <corners android:radius="25dp" />
        </shape>
        <item android:color="@color/BlueLight" android:state_enabled="true" />
    </item>

</selector>